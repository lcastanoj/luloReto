<configuration>

    <!-- Desactivar por completo el wire log de HttpClient5 -->
    <logger name="org.apache.hc.client5.http.wire" level="OFF"/>

    <!-- Opcional: bajar el ruido de HttpClient5 en general -->
    <logger name="org.apache.hc.client5" level="WARN"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>
